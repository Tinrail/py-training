#!/usr/bin/expect
set timeout 50
set port "22"
set file "/root/.ssh/id_rsa.pub"
set host [lindex $argv 0]
set password [lindex $argv 1]
spawn /usr/bin/ssh-copy-id -p ${port} -i ${file} root@${host}
expect {
       "(yes/no)?"     {exp_send "yes\r";exp_continue}
       "*password:"    {exp_send "${password}\r"}

}
expect eof
